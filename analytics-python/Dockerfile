FROM python:3.11-slim

WORKDIR /app

# Install system dependencies for OpenCV and builds
RUN apt-get update && apt-get install -y \
    ffmpeg \
    libsm6 \
    libxext6 \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY . .

EXPOSE 4242

CMD ["python", "main.py"]
